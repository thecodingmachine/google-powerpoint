{
  "name": "thecodingmachine/google-powerpoint",
  "description": "A library to easily create powerpoints from template files using the google api",
  "keywords": [
    "googleAPI",
    "powerpoint",
    "templates"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "ArthmaÃ«l Poly",
      "email": "a.poly@thecodingmachine.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "google/apiclient": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "phpstan/phpstan": "^0.12",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload" : {
    "psr-4" : {
      "TheCodingMachine\\GooglePowerpoint\\" : "src/"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "TheCodingMachine\\GooglePowerpoint\\Tests\\" : "tests/"
    }
  },
  "scripts": {
    "phpstan": "php vendor/bin/phpstan analyse",
    "phpunit": "php vendor/bin/phpunit",
    "cs-fix": "phpcbf",
    "cs-check": "phpcs"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
